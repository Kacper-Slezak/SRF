<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.srf.controllers.RegistrationController">

    <VBox layoutX="223.0" layoutY="9.0" prefWidth="155.0" spacing="10.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <Label alignment="CENTER" prefWidth="150.0" text="Register">
         <font>
            <Font size="27.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin></Label>
        <Label text="Username" />
        <TextField fx:id="usernameTextField" />
        <Label text="Password" />
        <PasswordField fx:id="passwordField" />
        <Label text="Repeat new password" />
        <PasswordField fx:id="repeatPasswordField" />
        <Button fx:id="registerButton" mnemonicParsing="false" onAction="#onRegisterButton" prefWidth="150.0" text="Register">
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin></Button>
      <Label text="Already have an account?" />
      <Button fx:id="logInButton" mnemonicParsing="false" onAction="#onLoginButton" text="Log in" />
    </VBox>
   <Label layoutX="10.0" layoutY="10.0" text="SRF">
      <font>
         <Font name="System Bold" size="20.0" />
      </font>
   </Label>

</AnchorPane>
