<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.srf.controllers.HomeController">
    <children>
      <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
         <top>
                <HBox alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
                    <children>
                  <Label minWidth="39.0" text="SRF">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="5.0" right="10.0" />
                     </HBox.margin>
                  </Label>
                  <Button fx:id="GenerateRecommendationsButton" minWidth="-Infinity" mnemonicParsing="false" onAction="#onGenerateRecommendationsButton" prefHeight="30.0" prefWidth="180.0" text="Generate recommendations">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
                        <TextField fx:id="SearchTextField" onAction="#onSearchButton" prefHeight="30.0" prefWidth="280.0" />
                        <Button fx:id="SearchButton" minWidth="-Infinity" mnemonicParsing="false" onAction="#onSearchButton" prefHeight="30.0" prefWidth="60.0" text="Search">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin></Button>
                  <Button fx:id="LogOut" minWidth="-Infinity" mnemonicParsing="false" onAction="#onLogOutButton" prefHeight="30.0" prefWidth="60.0" text="Log out" />
                    </children>
                </HBox>
         </top>
         <bottom>
            <HBox alignment="CENTER">
               <children>
                   <Button fx:id="PreviousPageButton" alignment="CENTER" mnemonicParsing="false" onAction="#onPreviousPageButton" prefHeight="30.0" prefWidth="200.0" text="Previous page" />
                   <Button fx:id="NextPageButton" alignment="CENTER" mnemonicParsing="false" onAction="#onNextPageButton" prefHeight="30.0" prefWidth="200.0" text="Next page" />
               </children>
            </HBox>
         </bottom>
         <center>
                <VBox fx:id="ListVbox" prefHeight="500.0" prefWidth="100.0" spacing="5.0" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="NameLabel">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="50.0" top="75.0" />
                     </VBox.margin></Label>
                  <Label text="Nice to see You here.">
                   <font>
                       <Font size="24.0" />
                   </font>
                     <VBox.margin>
                        <Insets left="50.0" />
                     </VBox.margin></Label>
                   <Label text="This is a personal movie recommendation app. You can rate movies and generate unique recommendations just for You." wrapText="true">
                     <VBox.margin>
                        <Insets left="50.0" />
                     </VBox.margin></Label>
               </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
               <padding>
                  <Insets bottom="5.0" left="0.0" right="0.0" top="5.0" />
               </padding>
                </VBox>
         </center>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <right>
            <VBox fx:id="RatingVbox" spacing="5.0" BorderPane.alignment="CENTER">
                <children>
                    <Label />
                </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="0.0" top="5.0" />
               </padding>
            </VBox>
         </right>
      </BorderPane>
      <Button fx:id="PlusButton" layoutX="560.0" layoutY="360.0" minWidth="-Infinity" mnemonicParsing="false" onAction="#onPlusButton" prefHeight="30.0" prefWidth="30.0" text="+">
         <padding>
            <Insets bottom="2.0" />
         </padding>
      </Button>
    </children>
</AnchorPane>
