<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.srf.controllers.RegistrationController">

    <VBox layoutX="225.0" layoutY="61.0" prefHeight="200.0" prefWidth="150.0" spacing="10.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <Label text="Create a new account"/>
        <Label text="Username" />
        <TextField fx:id="usernameTextField" />
        <Label text="Password" />
        <PasswordField fx:id="passwordField" />
        <Label text="Repeat new password" />
        <PasswordField fx:id="repeatPasswordField" />
        <Button fx:id="registerButton" mnemonicParsing="false" onAction="#onRegisterButton" text="Register" />
    </VBox>

</AnchorPane>
