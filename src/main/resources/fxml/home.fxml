<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.controlsfx.control.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.laby.controllers.HomeController">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0" spacing="10.0">
         <children>
            <HBox prefHeight="15.0" prefWidth="500.0">
               <children>
                  <TextField fx:id="SearchTextField" prefWidth="500.0" />
                  <Button fx:id="SearchButton" mnemonicParsing="false" onAction="#onSearchButton" text="Search" />
               </children>
            </HBox>
            <Label text="Your personal recommednations" />
            <VBox fx:id="ListVbox" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <HBox alignment="BASELINE_CENTER" prefHeight="40.0" prefWidth="400.0" spacing="10.0">
                      <padding>
                          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                      </padding>
                     <children>
                        <Label fx:id="TitleLabel" text="Fast and Furious 79">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                         <Label fx:id="GenreLabel" text="Family" />
                         <Rating fx:id="Rating" prefHeight="40" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <Button fx:id="RefreshButton" onAction="#onRefreshButton" mnemonicParsing="false" text="Refresh" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
