<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.controlsfx.control.*?>

<HBox alignment="CENTER" prefWidth="1280" spacing="5.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.srf.controllers.MovieController">
    <VBox>
        <Label fx:id="TitleLabel">
         <font>
            <Font name="System Bold" size="18.0" />
         </font></Label>
        <Label fx:id="GenresLabel" />
    </VBox>
    <Region HBox.hgrow="ALWAYS" />
    <Rating fx:id="MovieRating" maxHeight="30.0" />
    <Button fx:id="IMDbButton" onAction="#onIMDbButton" prefHeight="30.0" text="IMDb" />
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</HBox>
