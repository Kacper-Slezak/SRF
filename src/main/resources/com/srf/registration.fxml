<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.srf.controllers.RegistrationController">

    <VBox prefHeight="200.0" prefWidth="150.0" spacing="10.0">
        <children>
            <Label text="Username" />
            <TextField fx:id="usernameTextField" />
            <Label text="Password" />
            <PasswordField fx:id="passwordField" />
            <Label text="Repeat new password" />
            <PasswordField fx:id="repeatPasswordField" />
            <Button fx:id="registerButton" onAction="#onRegisterButton" mnemonicParsing="false" text="Register" />
        </children>
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
    </VBox>

</AnchorPane>
