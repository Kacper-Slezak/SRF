<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.srf.controllers.HomeController">
    <children>
        <VBox prefHeight="400.0" prefWidth="600.0" spacing="10.0">
            <children>
                <HBox alignment="CENTER" prefHeight="15.0" prefWidth="500.0">
                    <children>
                  <Label text="SRF">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </Label>
                        <TextField fx:id="SearchTextField" prefHeight="30.0" prefWidth="450.0" />
                        <Button fx:id="SearchButton" mnemonicParsing="false" onAction="#onSearchButton" prefHeight="30.0" prefWidth="60.0" text="Search" />
                    </children>
                </HBox>
                <VBox fx:id="ListVbox" prefHeight="500.0" prefWidth="100.0">
               <children>
                  <Label text="Hello">
                     <font>
                        <Font size="45.0" />
                     </font>
                  </Label>
                  <Label fx:id="NameLabel">
                     <font>
                        <Font size="24.0" />
                     </font></Label>
                  <Label text="Glad to see You here, please hit refresh button to discover Your movie recommendations." />
               </children>
                </VBox>
                <Button fx:id="RefreshButton" alignment="CENTER" mnemonicParsing="false" onAction="#onRefreshButton" prefWidth="600.0" text="Refresh">
               <font>
                  <Font size="17.0" />
               </font></Button>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
