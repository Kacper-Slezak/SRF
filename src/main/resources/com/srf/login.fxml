<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxWidth="-Infinity" prefWidth="160.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.srf.controllers.LoginController">
      <center>
         <VBox prefWidth="160.0" maxWidth="-Infinity" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Region VBox.vgrow="ALWAYS" />
            <Label alignment="CENTER" contentDisplay="CENTER" prefWidth="150.0" text="Log in" textAlignment="CENTER">
               <font>
                  <Font size="27.0" />
               </font>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets bottom="20.0" />
               </padding>
            </Label>
            <Label text="Username" />
            <TextField fx:id="usernameTextField" />
            <Label text="Password" />
            <PasswordField fx:id="passwordField" onAction="#onLogInButton" />
            <Button fx:id="logInButton" mnemonicParsing="false" onAction="#onLogInButton" prefWidth="150.0" text="Log in">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Button>
            <Label text="Don't have an account?" />
            <Button fx:id="registerButton" mnemonicParsing="false" onAction="#onRegisterButton" text="Register" />
            <Region VBox.vgrow="ALWAYS" />
         </VBox>
      </center>
      <top>
         <Label text="SRF" BorderPane.alignment="CENTER">
            <font>
               <Font name="System Bold" size="20.0" />
            </font>
         </Label>
      </top>
   </BorderPane>
